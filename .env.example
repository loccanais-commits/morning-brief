# Morning Brief - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# NEWS API (TheNewsAPI.com)
# ===========================================
# Get your API key at: https://www.thenewsapi.com/
# Free tier: Limited requests
# Basic plan ($19/mo): 2,500 requests/day
THENEWSAPI_KEY=your_api_key_here

# ===========================================
# AI SUMMARIZATION (Choose one or both)
# ===========================================

# Anthropic Claude API
# Get your key at: https://console.anthropic.com/
# Recommended model: claude-3-haiku-20240307 (cheapest)
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI API (alternative)
# Get your key at: https://platform.openai.com/
# Recommended model: gpt-4o-mini (cheapest)
OPENAI_API_KEY=your_openai_key_here

# ===========================================
# TEXT-TO-SPEECH
# ===========================================

# ElevenLabs (Recommended - Natural voices)
# Get your key at: https://elevenlabs.io/
# Starter plan ($5/mo): 30,000 characters/month
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Amazon Polly (Fallback)
# Setup: Create IAM user with AmazonPollyReadOnlyAccess policy
# Free tier: 5M characters/month for 12 months
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ===========================================
# SUPABASE DATABASE
# ===========================================
# Get your credentials at: https://app.supabase.com/
# Free tier: 500MB storage, 2GB bandwidth
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# ===========================================
# PUSH NOTIFICATIONS (VAPID Keys)
# ===========================================
# Generate with: npx web-push generate-vapid-keys
# Or use: https://vapidkeys.com/
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=mailto:hello@morningbrief.news

# ===========================================
# CRON / AUTOMATION
# ===========================================
# Secret to protect cron endpoint (optional)
CRON_SECRET=your_random_secret_here

# ===========================================
# STORAGE (Optional - for audio files)
# ===========================================
# Cloudflare R2 (S3-compatible, free egress)
# Get credentials at: https://dash.cloudflare.com/
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=morning-brief-audio

# ===========================================
# NEWSLETTER - BEEHIIV
# ===========================================
# Get your credentials at: https://app.beehiiv.com/settings/integrations
# Free tier: Up to 2,500 subscribers
BEEHIIV_API_KEY=your_beehiiv_api_key_here
BEEHIIV_PUBLICATION_ID=pub_xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# SITE CONFIG
# ===========================================
NEXT_PUBLIC_SITE_URL=https://morningbrief.com
NEXT_PUBLIC_SITE_NAME="Morning Brief"
